// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  activated      Boolean @default(false)
  activationLink String? @unique

  roleId String @default("0")
  role   Role   @relation(fields: [roleId], references: [id])

  token         Token?
  subscriptions Subscription[]
}

model Role {
  id   String @id @default(uuid())
  name String @unique

  rights Right[]
  users  User[]
}

model Right {
  id   String @id @default(uuid())
  name String

  roles Role[]
}

model Premiere {
  id               Int     @id
  nameRu           String?
  nameEn           String?
  posterUrl        String
  posterUrlPreview String
  premiereRu       String
  duration         Int?

  year  Int
  month String

  subscription Subscription[]
}

model Token {
  token  String @id
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Subscription {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  premiereId Int
  premiere   Premiere @relation(fields: [premiereId], references: [id])
}
